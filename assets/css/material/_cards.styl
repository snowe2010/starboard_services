/* Generals resets and unimportant stuff */
* {
  margin: 0;
  padding: 0;
}

/* --- Product Card ---- */

.services
  .col
    position relative

.product-image
  max-height 300px
  position: absolute;
  transform: translate(-50%, 0%);


#product-card {
  height: 500px;
  background: #fff;
  position: relative;
  transition: all 100ms ease-out;
}

#product-card-container.animate #product-card {
  top: 0;
  left: 0;
  transition: all 100ms ease-out;
}

#product-card-container
  width: 100%;
  height: 400px;
  position: absolute;
  overflow: hidden;
  transition: 100ms ease-out;
  &.animate
    box-shadow: 0px 13px 21px -5px rgba(0, 0, 0, 0.3);
    transition: 100ms ease-out;
    transform: scale(1.01);
    .stats-container
      top 200px
      transition: all 200ms ease-out;
    .image_overlay
      opacity: 0.7;
      -webkit-transition: all 200ms ease-out;
      -moz-transition: all 200ms ease-out;
      -o-transition: all 200ms ease-out;
      transition: all 200ms ease-out;
    #view_details
      opacity: 1;
      width: 152px;
      font-size: 15px;
      margin-left: -75px;
      top 85px;
      transition: all 200ms ease-out;
  .stats-container
    background: #fff;
    position: absolute;
    box-sizing border-box
    top: 300px;
    left: 0;
    width 100%
    height: 300px;
    padding: 27px 35px 35px;
    transition: all 200ms ease-out;
    .product_name
      font-size: 22px;
      color: #393c45;
    p
      font-size: 16px;
      color: #b1b1b3;
      padding: 2px 0 20px 0;
    .product_price
      float: right;
      color: #365D6A;
      font-size: 22px;
      font-weight: 600;
    .product-options
      padding: 2px 0 0;
      ul
        list-style none
      strong
        font-weight: 700;
        color: #393c45;
        font-size: 14px;
      span
        color: #969699;
        font-size: 14px;
        display: block;
        margin-bottom: 8px;

  .image_overlay
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: #365D6A;
    opacity: 0;

  #view_details
    position: absolute;
    top: 112px;
    left: 50%;
    margin-left: -85px;
    border: 2px solid #fff;
    color: #fff;
    font-size: 19px;
    text-align: center;
    text-transform: uppercase;
    text-decoration none
    font-weight: 700;
    padding: 10px 0;
    width: 172px;
    opacity: 0;
    transition: all 200ms ease-out;
    &:hover
      background: #fff;
      color: #365D6A;
      cursor: pointer;

div.shadow {
  width: 100%;
  height: 520px;
  opacity: 0;
  position: absolute;
  top: 0;
  left: 0;
  z-index: 3;
  display: none;
  background: linear-gradient(to right, rgba(0, 0, 0, 0.1), rgba(0, 0, 0, 0.2));
}